<article class="editCenter">
<h2>Edit Post</h2>

<form method="POST" action="/guest/update/{{_id}}">
    <label for="content">Edit your post:</label>
    <textarea name="content" id="content" rows="4" cols="20">{{content}}</textarea>
  <button type="submit">Save Changes <i class="fa fa-save" ></i></button>
</form> 
</article>