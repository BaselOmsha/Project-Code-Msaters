<div class="profile-main">
    <section class="profile-left-upper-block">
        <h1>
            {{firstname}}
            {{lastname}}
        </h1>
        <div class="basic-info">
            <ul>
                <li>
                    <strong>Email:</strong>
                    {{email}}
                </li>
                <li>
                    <strong>Date of Birth:</strong>
                    {{day}}
                    {{month2}}
                    {{year}}
                </li>
                <li>
                    <strong>Gender:</strong>
                    {{gender}}
                </li>
            </ul>
        </div>
        <a href="../edit-profile/{{_id}}" class="edit-btn" role="button">Edit your info</a>
        {{!-- <a href="../delete-profile/{{_id}}" class="delete-btn" role="button">Delete your profile</a> --}}
        <form method="POST" action="../delete-profile/{{_id}}">
            <button type="submit" class="delete-btn">Delete your profile</button>
        </form>
    </section>
    <section class="profile-right-lower-block">
        <section class="profile-desc-card">
            <li>
                <strong>Description:</strong>
                {{#if description}}
                <ul>
                    <P>{{description}}</P>
                </ul>
                {{else}}
                <ul>Nothing yet</ul>
                {{/if}}
            </li>
        </section>
        <section class="profile-hobbies-card">
            <li>
                <strong>Hobbies:</strong>
                {{#if hobbies}}
                {{#each hobbies}}
                <ul>{{this}}</ul>
                {{/each}}
                {{else}}
                <ul>Nothing yet</ul>
                {{/if}}
            </li>
        </section>
    </section>
</div>